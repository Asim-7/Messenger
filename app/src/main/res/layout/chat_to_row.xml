<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
android:layout_marginBottom="12dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView_chatTo_row"
            android:contentDescription="This is star"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/googleg_standard_color_18"/>
    <TextView
            android:text="This is my message and can go to multiple lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_views"
            android:maxWidth="240dp"
            android:padding="16dp"
            android:id="@+id/textView_to_Row"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView_chatTo_row" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView_chatTo_row"/>
</androidx.constraintlayout.widget.ConstraintLayout>